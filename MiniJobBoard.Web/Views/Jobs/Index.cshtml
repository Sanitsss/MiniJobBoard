@model IEnumerable<MiniJobBoard.Web.Models.Job>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-center flex-grow-1">Available Jobs</h2>

    <a asp-action="Create" class="btn btn-success shadow-sm" style="min-width:150px;">
        ➕ Add Job
    </a>
</div>

<div class="row">
    @foreach (var job in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="job-card shadow-lg p-4 rounded-4 border border-2 border-light bg-white">
                <h4 class="fw-bold text-dark">@job.Title</h4>
                <p class="text-secondary mb-1"><strong>Company:</strong> @job.Company</p>
                <p class="text-muted">@job.Description</p>

                <a asp-controller="Applications" asp-action="Apply" asp-route-jobId="@job.Id"
                   class="btn btn-primary w-100 mt-3 fw-semibold">
                    Apply Now
                </a>
            </div>
        </div>
    }
</div>

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #ffffff);
    }

    .job-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: fadeInUp 0.6s ease;
    }

        .job-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
