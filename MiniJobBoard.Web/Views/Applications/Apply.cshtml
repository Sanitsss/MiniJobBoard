@model MiniJobBoard.Web.Models.Application

<h2>Apply for Job</h2>

<form asp-action="Apply" method="post">
    <input type="hidden" asp-for="JobId" />

    <div class="form-group">
        <label asp-for="ApplicantName"></label>
        <input asp-for="ApplicantName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Resume"></label>
        <textarea asp-for="Resume" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>
